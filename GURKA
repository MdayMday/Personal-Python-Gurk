#shuffling the deck
random.shuffle(deck)
#setting player hand
for x in range(6):
    x+1
    card = deck.pop(0)
    P1.insert(0, card)
    P1.sort()

#setting up Cpu hand
    x = 0
    x = int(x)
    for x in range(7):
        x + 1
        card = deck.pop(0)
        CPUS[x].insert(0, card)
        CPUS[x].sort()
        print("NEW TEST")
        print("p1", P1)
        print("cpu1", Cpu1)
        print("cpu2", Cpu2)
        print("cpu3", Cpu3)
        print("cpu4", Cpu4)
        print("cpu5", Cpu5)
        print("cpu6", Cpu6)
        print("cpu7", Cpu7)
        print("remaining cards", deck)

